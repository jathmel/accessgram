<div class="login">
<h1>Login to Access Gram</h1>
<% if flash[:notice] %>
   <div style="color:red"><%= flash[:notice] %></div>
 <% end %>
<%= form_for :session, url: login_path do |f| %>
<%= f.label :email %><br>
<%= f.email_field :email %><br>
<%= f.label :password %><br>
<%= f.password_field :password %><br>
<%= f.submit 'Login' %><br>
<p id= "signup">Brand new to Access Gram?<br> Sign up <%= link_to 'here', new_user_path %> </p>
<% end %>
</div>
